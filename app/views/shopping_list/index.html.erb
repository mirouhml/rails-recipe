<section class="shopping-list-section">
  <h1>Shopping List</h1>
  <div>
    <p>Amount of food to buy: <%= @recipe_foods.length %></p>
    <p>Recipe: <%= link_to @recipe.name, @recipe %></p>
  </div>
  <div>
    <p>Total value of food needed: $<%= @total_price %></p>
    <p>Inventory: <%= link_to @inventory.name, @inventory %></p>
  </div>
  <table>
    <thead>
      <tr>
        <th>Food</th>
        <th>Quantity</th>
        <th>Price</th>
      </tr>
    </thead>
    <tbody>
      <% if !@recipe_foods.empty? %>
        <% @recipe_foods.each do |food_details| %>
          <tr>
            <td><%= food_details.food.name %></td>
            <td><%= food_details.quantity %></td>
            <td>$<%= food_details.food.price * food_details.quantity %></td>
          </tr>
        <% end %>
      <% else %>
        <tr>
          <td colspan="3">No items yet.</td>
        </tr>
      <% end %>
    </tbody>
  </table>
</section>