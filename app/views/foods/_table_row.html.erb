<tr>
  <td><%= food.name %></td>
  <td><%= food.measurement_unit %></td>
  <td><%= food.price %></td>
  <td class="del_btn">
    <% if can? :destroy, food %>
      <%= button_to food_path(food), method: :delete, class:'btn btn-danger my-1' do %>
        <span>Delete</span>
      <% end %>
    <% else %>
      <span>No actions</span>
    <% end %>
  </td>
</tr>