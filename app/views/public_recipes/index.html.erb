<section class="public_recipe_container">
  <div class="row">
    <% if @recipes.empty? %>
      <h2>You don't have any existing recipe of your own!</h2>
    <% else %>
      <% @recipes.each do |recipe| %>
        <article class="row d-flex border p-3 mb-5 bg-white">
          <%= render partial: "recipe", locals: { recipe:, recipe_foods: @recipe_foods } %>
        </article>
      <% end %>
    <% end %>
  </div>
</section>
