<div class="devise-form">
  <h1>Sign In</h1>
  <%= form_for(resource, class:"devise-form", as: resource_name, url: session_path(resource_name), html: {"data-turbo": "false"}) do |f| %>
    <div class="field">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "input" %>
    </div>

    <div class="field">
      <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class: "input" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me, class: "devise-check" %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Log in", class: "devise-button" %>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
</div>